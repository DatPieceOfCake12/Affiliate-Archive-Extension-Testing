{
  "manifest_version": 3,
  "name": "Affiliate Archive",
  "description": "Save money and support your local creators by using their codes",
  "version": "0.1",
  "action": {
    "default_popup": "index.html",
    "default_icon": "briefcase.png"
  },
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": ["activeTab", "scripting","tabs","storage"]
}